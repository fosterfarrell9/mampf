<% unless from == 'course' %>
  <div class="row">
    <div class="col-12">
      <h6>
        <%= t('admin.seminar.new_seminar') %>
      </h6>
    </div>
  </div>
<% end %>
<% if Course.count == 0 %>
  <%= t('admin.lecture.no_courses_yet') %>
<% elsif Term.count == 0 %>
  <%= t('admin.lecture.no_terms_yet') %>
<% else %>
  <%= form_with model: seminar do |f| %>
    <% term_independent = (from != 'course' && first_course_independent?) ||
                            (from == 'course' && seminar.course.term_independent) %>
    <div class="form-row">
      <div class="col-8 form-group">
        <%= f.label :course_id, t('basics.course') %>
        <%= helpdesk(t('admin.lecture.info.course'), false) %>
        <%= f.select :course_id,
                     options_for_select(current_user
                                          .select_administrated_seminar_courses
                                          .natural_sort_by(&:first),
                                        seminar.course&.id),
                     {},
                     { class: 'selectize',
                       disabled: from == 'course',
                       data: { terminfo: Course.pluck(:id, :term_independent) } } %>
        <% if from == 'course' %>
          <%= f.hidden_field :course_id, value: seminar.course.id %>
        <% end %>
        <div class="invalid-feedback"
             id="new-seminar-course-error">
        </div>
      </div>
      <div class="col-4 form-group" id="newSeminarTerm"
           style="<%= term_independent ? 'display: none;' : '' %>">
        <%= f.label :term_id,
                    t('basics.term') %>
        <%= helpdesk(t('admin.lecture.info.term'), false) %>
        <%= f.select :term_id,
                     options_for_select(Term.select_terms),
                     {},
                     { class: 'form-control',
                       disabled: term_independent } %>
        <div class="invalid-feedback"
             id="new-seminar-term-error">
        </div>
      </div>
      <div class="col-12 form-group">
        <%= f.label :teacher_id,
                    t('basics.teacher') %>
        <%= helpdesk(t('admin.lecture.info.teacher'), false) %>
        <%= f.select :teacher_id,
                     options_for_select(User.select_editors,
                                        current_user.id),
                     {},
                     { class: 'selectize',
                       data: { current: current_user.id } } %>
      </div>
    <div class="col-12 form-group">
      <%= f.label :title, t('basics.title') %>
      <%= helpdesk(t('admin.course.info.title'), false) %>
      <%= f.text_field :title, { class: 'form-control',
                                 id: 'new_seminar_title',
                                 required: true } %>
      <div class="invalid-feedback"
           id="new-seminar-title-error">
      </div>
    </div>
      <div class="col-12 form-group" id="newSeminarSort"
           style="<%= term_independent ? 'display: none;' : '' %>">
        <%= f.label :sort,
                    t('basics.type') %>
        <%= f.select :sort,
                     options_for_select(Seminar.sort_localized.invert.to_a,
                                        'seminar'),
                     {},
                     { class: 'form-control'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 text-center">
        <%= f.submit t('buttons.save'),
            class: 'btn btn-primary' %>
        <button type="button"
                id="cancel-new-seminar"
                class="btn btn-secondary">
          <%= t('buttons.cancel') %>
        </button>
      </div>
    </div>
    <%= f.hidden_field :from, value: from %>
  <% end %>
<% end %>
